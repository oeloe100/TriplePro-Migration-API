<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - TPMApi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="https://kit.fontawesome.com/e96daa5f03.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container h-100">
        <header>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
            </div>
        </header>

        <div class="row flex-fill h-100">
            <main role="main" class="pb-3 col">
                <div class="logo-container">
                    <img class="company-logo" src="~/Images/triplepro.png" alt="Sample Photo" width="550px;" />
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

